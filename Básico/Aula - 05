#include <stdio.h>
#include <math.h>

int main(void) {

    int valor1, valor2, valor3, valor4, soma;
    float media;

    printf("Digite o 1º número :");
    scanf("%d", &valor1);
    printf("\nDigite o 2º número :");
    scanf("%d", &valor2);
    printf("\nDigite o 3º número :");
    scanf("%d", &valor3);
    printf("\nDigite o 4º número:");
    scanf("%d", &valor4);

    soma=valor1+valor2+valor3+valor4;
    media= soma/4;

      printf("\n A soma de %d,%d,%d e %d é de %d", valor1, valor2, valor3, valor4, soma);
      printf("\n A média dos números %d, %d, %d e %d é de %.2f", valor1, valor2, valor3,valor4, media);
      
  return 0;
}
