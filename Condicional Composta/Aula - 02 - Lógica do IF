#include <stdio.h>
#include <math.h>

int main (){

  int num1;

  printf("Informe um número inteiro: ");
  scanf("%d",&num1);

  if (num1/3==0)
    printf("\nNúmero é divisível por 3!");
  if (num1/7==0)
    printf("\nNúmero é divisível por 7!");
    printf("O número não é divisível por 3 nem por 7");

return 0;

}
